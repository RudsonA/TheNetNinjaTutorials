html(lang="en")
    head
        meta(charset="UTF-8")
        title Regex Form
        link(rel="stylesheet", href="../stylesheets/css/style.css")
    body
        h1 New User Signup
        form 
            input(type="text", name="username" placeholder="username")
            p Username must be  and contain 5 - 12 characters 
            input(type="text", name="email" placeholder="email")
            p Email must be a valid address, e.g. me@mydomain.com
            input(type="password", name="password" placeholder="password")
            p Password must alphanumeric (@, _ and - are also allowed) and be 8 - 20 characters
            input(type="text" name="telephone" placeholder="telephone")
            p Telephone must be a valid UK telephone number (11 digits)
            input(type="text" name="slug" placeholder="profile slug")
            p Slug must contain only lowercase letters, numbers and hyphens and be 8 - 20 characters
        
        script(src="../scripts/main-compiled.js")